<%= simple_form_for(:comment, url: post_comments_path(@post.id), html: { class: 'form-horizontal' }) do |f| %>
  <div class="">
    <%= f.input :content, label: false, placeholder: 'Leave a comment here', as: :text %><br>
  </div>
  <div class="">
    <%= f.button :submit, 'Send', class: 'btn btn-info btn-cmt' %>
  </div>
  <div class="clearfix"></div>
<% end %>
